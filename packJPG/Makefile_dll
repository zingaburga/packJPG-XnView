# Project: packJPG DLL
# Makefile created by Matthias Stirner 01/30/2012
# Working with GCC 4.6.0

CC      = gcc
CPP     = g++
RC      = windres -O coff
RM      = del
CFLAGS  = -I. -DBUILD_DLL -O3 -Wall -pedantic -funroll-loops -ffast-math -fsched-spec-load -fomit-frame-pointer -I../libyuv/include
LDFLAGS = -Wl,--out-implib,libpackJPG.a -fvisibility=hidden -static-libgcc -static-libstdc++
DEPS    = bitops.h aricoder.h pjpgtbl.h dct8x8.h Makefile
OBJ     = bitops.o aricoder.o packjpg.o
RES     = icons.res
BIN     = packJPG.dll
LIBYUV  = ../libyuv/libyuv.a

%.o: %.cpp $(DEPS)
	$(CPP) -c -o $@ $< $(CFLAGS)
	
%.res: %.rc
	$(RC) $< $@

$(BIN): $(OBJ) $(RES) $(LIBYUV)
	$(CPP) -shared -o $@ $^ $(LDFLAGS)

$(LIBYUV):
	cd ../libyuv && make

clean:
	$(RM) *.o
